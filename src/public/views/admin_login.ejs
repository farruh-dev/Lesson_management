<!DOCTYPE html>
<html lang="en">
<head>
	<title>Admin Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
<%- include("parts/favicon") %> 
<%- include("parts/css_links") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css"> 
</head>
<body>

    <% var error %> 
	
	<div class="limiter">
		<div class="container">
			<div style="width: 500px; margin: auto;" class="d-flex justify-content-center align-items-center p-5">
				<form class="w-100" method="post">
					<span class="">
						Login
					</span>

                    <% if (error) {%>
                        <div class="alert alert-danger"><%= error %> </div>
                    <% } %> 

					<div class="input-field col s6">
						<input class="input" type="text" name="username" required>
						<label for="username" style="pointer-events: none;">Username</label>
					</div>

					<div class="input-field col s6">
						<input class="input" type="password" name="password" required>
						<label for="password" style="pointer-events: none;">Password</label>
					</div>
					
					<div class="d-flex justify-content-end align-items-center">
						<button type="submit" class="w-100 button button_fill_primary">Login</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	<%- include("parts/js_links.ejs") %>
	
</body>
</html>