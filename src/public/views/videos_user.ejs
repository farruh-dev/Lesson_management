<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("parts/favicon") %>
    <%- include("parts/css_links") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Students</title>
</head>

<body>

    <% var videos_list %>

    <div class="navbar-fixed">
        <nav class="my_navbar">
            <div class="nav-wrapper container">
                <a class="brand-logo" href="/">Lesson calendar</a>
                <div data-target="mobile-demo" class="nav_toggle sidenav-trigger">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/">Schedule</a>
                    </li>

                    <li>
                        <a href="/groups">Groups</a>
                    </li>

                    <li class="active">
                        <a href="/videos">Videos</a>
                    </li>

                    <li>
                        <a href="/admin/login">Login</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <ul class="sidenav" id="mobile-demo">
        <li>
            <a href="/">Schedule</a>
        </li>

        <li>
            <a href="/groups">Groups</a>
        </li>

        <li class="active">
            <a href="/videos">Videos</a>
        </li>

        <li>
            <a href="/admin/login">Login</a>
        </li>
    </ul>


    <section id="students_section">
        <div class="container" style="padding: 50px 10px;">
            <h1 class="text-center mb-5">Videos</h1>
            <% if (videos_list.length != 0) {%>
                <div class="row row-cols-2 row-cols-md-2 row-cols-xl-2 g-5">
                    <% for( let item of videos_list ) { %>
                        <div class="col day_item">
                            <div class="card card_own">

                                <div class="card-body">
                                    <!-- video -->
                                    <a href="/videos/<%= item._id %> ">
                                        <img height="320px" style="object-fit: cover;" class="w-100" src="<%= item.img %> " alt="<%= item.title %>">
                                    </a>
                                </div>

                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <p class="video_title"><%= item.title %> </p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <h4 style="color: rgba(0, 0, 0, 0.5);">Nothing yet..</h4>
            <% } %> 

        </div>
    </section>

    <%- include("parts/js_links") %>

</body>

</html>