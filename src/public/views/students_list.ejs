<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Document</title>
</head>

<body>

    <% var lessonsList %>
    <% var lesson_schedule %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand mb-0 h1" href="/admin">Lesson Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/schedule">Schedule</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/students">Students</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Account</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <section id="schedule_section">
        <div class="container" style="padding: 50px 10px;">
            <h1 class="text-center mb-5">Schedule</h1>
            <div class="row row-cols-1 row-cols-md-2 g-5">
                <% for( let item of lesson_schedule ) { %>
                <div class="col">
                    <div class="card" style="height: 100%;">
                        <div class="card-header">
                            <h4><%= item.day %></h4>
                        </div>

                        <div class="card-body">
                            <div class="lessons_table_headers">
                                <div><h6>Time</h6></div>
                                <div><h6>Students</h6></div>
                                <div><h6>Actions</h6></div>
                            </div>
                            <div class="lessons_table">
                                <% for (let lesson of lessonsList) { %>
                                    <% if (lesson.day_id.equals(item._id)) {%>
                                        <div class="lessons_table_item">
                                            <div class="lesson_time"><%= lesson.time %> </div>
                                            <div class="lesson_students"><%= lesson.students %></div>
                                            <div class="lesson_actions"><button data-id="<%= lesson._id %>" class="btn btn-secondary">Edit</button></div>
                                        </div>
                                    <% } %> 
                                <% } %>
                            </div>
                            
                        </div>
                            
                        <div class="card-footer d-flex justify-content-end align-items-center">
                            <button data-id="<%= item._id %>" data-dayname="<%= item.day %>" data-bs-toggle="modal" data-bs-target="#addTimeModal" class="add_time_btn btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Add Lesson Modal -->
    <div class="modal fade" id="addTimeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="add_time_modal_title modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addTimeForm" action="/admin/schedule" method="post">
                        <div>
                            <label for="time">Time</label>
                            <input class="form-control" type="time" name="time" placeholder="Time" required>
                        </div>

                        <div>
                            <label for="time">Students</label>
                            <textarea class="form-control" name="students" id="students" cols="30" rows="2" placeholder="Students"></textarea>
                        </div>

                        <input id="dayName" name="day_name" type="hidden">
                        <input id="dayId" name="day_id" type="hidden">

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Lesson Modal -->
    <div class="modal fade" id="editLessonModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="edit_lesson_modal_title modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editLessonForm" action="/lessons/new">
                        <div>
                            <label for="time">Time</label>
                            <input class="form-control" type="time" name="time" placeholder="Time" required>
                        </div>

                        <div>
                            <label for="time">Students</label>
                            <textarea class="form-control" name="students" id="students" cols="30" rows="2" placeholder="Students"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script>
        const addTimeButtons = document.querySelectorAll(".add_time_btn")
        const weekDays = document.querySelectorAll(".col")
        const addTimeModal = document.querySelector("#addTimeModal")
        const addTimeModalTitle = document.querySelector(".add_time_modal_title")
        const dayName = document.querySelector("#dayName")
        const dayId = document.querySelector("#dayId")

        document.addEventListener("DOMContentLoaded", event => {
            const date = new Date().getDay()
            const current = weekDays.item(date - 1)
            current.childNodes[1].classList.add("current_day")
            current.childNodes[1].childNodes[1].style.backgroundColor = "#64ff92"
            console.log(current.childNodes[1].style.boxShadow);

        })

        addTimeButtons.forEach(button => {
            button.addEventListener("click", event => {
                addTimeModalTitle.textContent = event.target.dataset.dayname
                dayId.value = event.target.dataset.id
                dayName.value = event.target.dataset.dayname

            })
        })
    </script>
</body>

</html>