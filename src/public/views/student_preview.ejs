<% var student %>
<% var lesson_times %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("parts/favicon") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Preview - <%= student.fullname %> </title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand mb-0 h1" href="/admin">Lesson Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/schedule">Schedule</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/students">Students</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Account</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <section id="student_section">
        <div class="container" style="padding: 50px 10px;">
            <h1 class="text-center mb-5"><%= student.fullname %> </h1>

            <div class="student">
                <div class="student_props">

                    <div>
                        <span>age: </span><br>
                        <h3><%= student.age %></h3>
                    </div>
                    <div>
                        <span>gender: </span><br>
                        <h3><%= student.gender %></h3>
                    </div>
                    <div>
                        <span>phone: </span><br>
                        <h3><%= student.phone %></h3>
                    </div>
                    <div>
                        <span>telegram: </span><br>
                        <h3><%= student.telegram %></h3>
                    </div>
                    <div>
                        <span>level: </span><br>
                        <h3><%= student.level %></h3>
                    </div>
                    <div>
                        <span>have lessons on: </span><br>
                        <% for (let item of lesson_times) {%>
                        <h3><%= item.day %>: <%= item.time %> </h3>
                        <% } %>
                    </div>
                </div>
                <div class="actions"">
                    <button class=" edit_student_button btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#editStudentModal">Edit Student</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Add Student Modal -->
    <div class="modal fade" id="editStudentModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="add_student_modal_title modal-title" id="staticBackdropLabel">Add student</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addStudentForm" action="/admin/new_student" method="post">
                        <div>
                            <label for="name">Full name</label>
                            <input class="form-control" type="text" name="fullname" placeholder="Full name" required>
                        </div>

                        <div>
                            <label for="age">Age</label>
                            <input class="form-control" type="number" name="age" placeholder="Age" required>
                        </div>

                        <div>
                            <label>Gender</label><br>

                            <input type="radio" id="male" name="gender" value="male">
                            <label for="male">Male</label>
                            <input type="radio" id="female" name="gender" value="female">
                            <label for="female">Female</label><br>
                        </div>

                        <div>
                            <label for="phone">Phone <span style="color: gray;">(optional)</span></label>
                            <input class="form-control" type="number" name="phone" placeholder="+998">
                        </div>

                        <div>
                            <label for="telegram">Telegram username <span style="color: gray;">(optional)</span></label>
                            <input class="form-control" type="text" name="telegram" placeholder="@examle">
                        </div>

                        <div>
                            <label for="telegram">Started date <span style="color: gray;">(optional)</span></label>
                            <input class="form-control" type="date" name="started_at" placeholder="">
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Lesson Modal -->
    <div class="modal fade" id="editLessonModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="edit_lesson_modal_title modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editLessonForm" action="/lessons/new">
                        <div>
                            <label for="time">Time</label>
                            <input class="form-control" type="time" name="time" placeholder="Time" required>
                        </div>

                        <div>
                            <label for="time">Students</label>
                            <textarea class="form-control" name="students" id="students" cols="30" rows="2"
                                placeholder="Students"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script>

    </script>
</body>

</html>