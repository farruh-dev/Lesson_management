<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("parts/favicon") %>
    <%- include("parts/css_links") %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <script type="text/javascript">
        const x = "<%= user._id %>"
    </script>
    <title>Account</title>
</head>

<body>
    <div class="navbar-fixed">
    <nav class="my_navbar">
        <div class="nav-wrapper container">
            <a class="brand-logo" href="/admin/schedule">Lesson calendar</a>
            <div data-target="mobile-demo" class="nav_toggle sidenav-trigger">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
            </div>

                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/admin/schedule">Schedule</a>
                    </li>

                    <li>
                        <a href="/admin/groups">Groups</a>
                    </li>

                    <li>
                        <a href="/admin/students">Students</a>
                    </li>
                    <li class="active" ><a href="/admin/account">Account</a></li>
                    
                    <li><a href="/admin/exit">Logout</a></li>
                </ul>

        </div>
    </nav>
    </div>

    <section id="admin_account_section">
        <div class="container">
            <div class="account_props">
                <div class="elem">
                    <div>
                        <span>Full name</span>
                        <h4><%= user.name %> <%= user.surname %></h4>
                    </div>
                    <button class="button button_outline_secondary" data-bs-toggle="modal"
                        data-bs-target="#changeNameModal">Edit</button>
                </div>
                <div class="elem">
                    <div>
                        <span>Username</span>
                        <h4><%= user.username %></h4>
                    </div>
                    <button class="button button_outline_secondary" data-bs-toggle="modal"
                        data-bs-target="#changeUsernameModal">Edit</button>
                </div>
                <div class="psw">
                    <button class="button button_danger" data-bs-toggle="modal"
                        data-bs-target="#changePasswordModal">Change password</button>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="changeNameModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="changeNameForm">
                        <div>
                            <label for="password">Password</label>
                            <input class="form-control change_name_password" type="password" required>
                        </div>

                        <div>
                            <label for="old_password">Name</label>
                            <input class="form-control change_name_input" type="text" required>
                        </div>

                        <div>
                            <label for="new_password">Surname</label>
                            <input class="form-control change_surname_input" type="text" required>
                        </div>

                        <div class="mt-3 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="changeUsernameModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit username</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="changeUsernameForm">
                        <div>
                            <label for="password">Password</label>
                            <input class="form-control change_username_password" type="password" required>
                        </div>

                        <div>
                            <label for="old_password">Username</label>
                            <input class="form-control change_username_input" type="text" required>
                        </div>

                        <div class="mt-3 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="changePasswordModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="changePasswordForm">
                        <div>
                            <label for="old_password">Old password</label>
                            <input class="form-control change_password_old_password" type="password" required>
                        </div>

                        <div>
                            <label for="new_password">New password</label>
                            <input class="form-control change_password_new_password" type="password" required>
                        </div>

                        <div>
                            <label for="confirm_password">Confirm new password</label>
                            <input class="form-control change_password_confirm_password" type="password" required>
                        </div>

                        <div id="password_alert" class="d-none alert alert-danger"></div>

                        <div class="mt-3 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script>
        const changeNameForm = document.querySelector("#changeNameForm");
        const changeUsernameForm = document.querySelector("#changeUsernameForm");
        const changePasswordForm = document.querySelector("#changePasswordForm");

        const changeNamePasswordInput = document.querySelector(".change_name_password");
        const changeNameInput = document.querySelector(".change_name_input");
        const changeSurnameInput = document.querySelector(".change_surname_input");

        const changeUseramePasswordInput = document.querySelector(".change_username_password");
        const changeUsernameInput = document.querySelector(".change_username_input");

        const changePasswordOldpasswordInput = document.querySelector(".change_password_old_password");
        const changePasswordNewpasswordInput = document.querySelector(".change_password_new_password");
        const changePasswordConfirmpasswordInput = document.querySelector(".change_password_confirm_password");

        changeNameForm.addEventListener("submit", fetchName)
        changeUsernameForm.addEventListener("submit", fetchUsername)
        changePasswordForm.addEventListener("submit", fetchPassword)

        changePasswordConfirmpasswordInput.addEventListener('keyup', event => {
            if (changePasswordConfirmpasswordInput.value.length >= changePasswordNewpasswordInput.value
                .length) {
                if (changePasswordConfirmpasswordInput.value != changePasswordNewpasswordInput.value) {
                    changePasswordConfirmpasswordInput.style.borderColor = "red"
                    password_alert.classList.remove("d-none")
                    password_alert.textContent = "Password does not match!"
                } else {
                    changePasswordConfirmpasswordInput.style.borderColor = "green"
                    password_alert.classList.add("d-none")
                    password_alert.textContent = ""
                }
            }
        })

        async function fetchName() {

            event.preventDefault();

            let response = await fetch(`/admin/fullname/${x}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    password: changeNamePasswordInput.value,
                    name: changeNameInput.value,
                    surname: changeSurnameInput.value
                })
            })

            response = await response.json()

            alert(response.message)

            location.reload()
        }

        async function fetchUsername() {

            event.preventDefault();

            let response = await fetch(`/admin/username/${x}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    password: changeUseramePasswordInput.value,
                    username: changeUsernameInput.value
                })
            })

            response = await response.json()

            alert(response.message)

            location.reload()
        }

        async function fetchPassword() {

            event.preventDefault();

            let response = await fetch(`/admin/password/${x}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    old_password: changePasswordOldpasswordInput.value,
                    new_password: changePasswordNewpasswordInput.value,
                    confirm_password: changePasswordConfirmpasswordInput.value
                })
            })

            response = await response.json()

            console.log(response)

            alert(response.message)

            location.reload()
        }
    </script>
</body>

</html>