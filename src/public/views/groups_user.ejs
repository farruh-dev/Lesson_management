<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("parts/favicon") %>
    <%- include("parts/css_links") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Students</title>
</head>

<body>

    <% var students_list %>
    <% var group_list %>

    <div class="navbar-fixed">
        <nav class="my_navbar">
            <div class="nav-wrapper container">
                <a class="brand-logo" href="/schedule">Lesson calendar</a>
                    <div data-target="mobile-demo" class="nav_toggle sidenav-trigger">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/">Schedule</a>
                    </li>

                    <li class="active">
                        <a href="/groups">Groups</a>
                    </li>

                    <li>
                        <a href="/videos">Videos</a>
                    </li>
                    
                    <li><a href="/admin/login">Login</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <ul class="sidenav" id="mobile-demo">
        <li>
            <a href="/">Schedule</a>
        </li>

        <li class="active">
            <a href="/groups">Groups</a>
        </li>

        <li>
            <a href="/videos">Videos</a>
        </li>
        <li><a href="/admin/login">Login</a></li>
    </ul>

    <section id="schedule_section">
        <div class="container" style="padding: 50px 10px;">
            <h1 class="text-center mb-5">Groups</h1>
            <% if (group_list.length != 0) {%>
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-5">
                <% for( let item of group_list ) { %>
                <div class="col day_item">
                    <div class="card card_own" style="height: 100%;">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4><%= item.name %></h4>
                        </div>

                        <div class="card-body">
                            <div class="lessons_table">
                                <% for (let student of students_list) { %>
                                    <% if (student.student_group_id != null) {%>
                                        <% if (student.student_group_id.equals(item._id)) {%>
                                            <div class="lessons_table_item">
                                                <div class="lesson_students">
                                                    <%= student.fullname %>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% } %>
                                <% } %>
                            </div>

                        </div>
                    </div>
                </div>
                <% } %>
            </div>
            <% } else { %>
                <h4 style="color: rgba(0, 0, 0, 0.5);">Nothing yet..</h4>
            <% } %> 
        </div>
    </section> 


    <%- include("parts/js_links") %>

</body>

</html>